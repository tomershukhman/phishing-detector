{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "1.0.0",
  "description": "Detects potential phishing websites using advanced ML techniques",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js"],
      "run_at": "document_idle",
      "type": "module"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/page-readiness.js"],
      "run_at": "document_start",
      "type": "module"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "lib/*.js",
      "lib/dom-detector/*.js",
      "model.js",
      "combined-detector.js",
      "model_metadata.json"
    ],
    "matches": ["<all_urls>"]
  }]
}
